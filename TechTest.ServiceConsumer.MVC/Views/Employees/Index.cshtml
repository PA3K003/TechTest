@model IEnumerable<TechTest.ServiceConsumer.MVC.ServiceEmployRef.EmployeeModel>

@{
    ViewBag.Title = "Index";
}

<div style="color: rgb(0, 63, 125)">
    <h2><strong>EMPLOYEE MAINTENANCE</strong> </h2>
    <div class="lead"><h4><strong> Web Application To Maintain Client Information  </strong> </h4>     <strong style="color: dodgerblue">Table List View</strong> </div>

</div>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover">

    <tr style="color: dodgerblue">

        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SurName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeNumber)
        </th>

    
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
     
        <th></th>
    </tr>

    @if (Model.Any())
    {
        foreach (var item in Model)
        {
            <tr style="color: rgb(48, 76, 68)">

      
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SurName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeNumber)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
              
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id ,@class="fas fa-edit"}) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id,@class="fa fa-open" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id,@class="fa fa-cancel " })
                </td>
            </tr>
            }
            }
        </table>
